        <item name="android:contentDescription">@string/menu_bur1_img</item>
        <item name="android:translationX">10sp</item>
        <item name="android:translationY">23sp</item>
    </style>

    <style name="txt_frame_burger_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:translationX">20sp</item>
